.menu-icon
	position absolute
	z-index 3
	top 30px
	right 40px
	width 30px
	height 30px
	overflow hidden
	cursor pointer
	user-select none
	// border 2px solid darken(dark-blue, 30%)
	.icon-container
		width 90%
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
	.bar 
		display block
		margin 0 auto
		width 100%
		height 2px
		margin 5px 0
		background light-blue
		transition all 100ms ease-out
		&:last-of-type 
			width 50%
	&.menu--open 
		.bar
			background rgba(255, 255, 255, 1)
		.bar:last-of-type
			width 100%
	&:hover 
		.bar:last-of-type 
			width 100%
			transition all 100ms ease-out
		
