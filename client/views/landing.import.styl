// Content Pagination
		
.content-navigation 
	position absolute 
	z-index 2
	left 0
	bottom 0
	width 100%
	height 10%
	background transparent
	font-size 0
	.pager-container 
		position absolute 
		top 50%
		left 50%
		transform translate(-50%, -50%)
		padding 10px
	.pager-link
		display inline-block
		padding 0
		margin 15px
		border-radius 100%
		width 10px
		height 10px
		background transparent
		border 2px solid rgb(50, 50, 50)
		list-style none
		cursor pointer
		transition background 200ms ease-out
		position relative
		user-select none
		// &.dark 
		// 	border-color rgb(0, 0, 0)
		// 	&:hover 
		// 		background rgb(0, 0, 0)
		&:hover 
			background rgb(50, 50, 50)
			transition background 200ms ease-out
	.link--active 
		background rgb(50, 50, 50)
	// .dark.link--active 
	// 	background rgb(0, 0, 0)

// Main Header 

.main-header
	visibility hidden
	opacity 1
	width 100% 
	height 100%
	top -100%
	left 0
	background rgba(70, 70, 200, 0.95)
	position absolute 
	z-index 50
.main-navigation 
	ul 
		position absolute 
		left 50%
		top 50%
		height 55%
		transform translate(-50%, -50%)
		text-align center
		list-style none
		li 
			color white
			text-transform uppercase 
			letter-spacing 0.5em
			height 33.3%
			position relative
			a, a:hover 
				color white
				text-decoration none
			a 
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				transition all 500ms ease-in
				font-weight 300
				font-size 2em
			&:hover 
				cursor pointer
				background rgba(70, 70, 200, 0.8)
	