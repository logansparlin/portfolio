dark-blue = #1c296a
light-blue = rgb(70, 70, 200)
main-font = 'proxima nova'

* 
	font-family main-font
	font-weight normal
	box-sizing border-box
	-webkit-font-smoothing antialiased

html, body 
	height 100%
	margin 0
	padding 0
	-webkit-font-smoothing antialiased
	border 5px solid white
	overflow hidden
h1, h2, h3, h4, h5, h6, p, span, div, ul 
	padding 0
	margin 0
a 
	color inherit
	text-decoration none
	font-family inherit
	font-weight inherit

.wrapper 
	padding 0 20px
	max-width 1280px 
	margin 0 auto

@import 'nib'
@import 'jeet'
@import 'rupture'
@import 'views/**/*.import.styl'